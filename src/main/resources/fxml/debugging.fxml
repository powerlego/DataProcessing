<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXSpinner?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" xmlns="http://javafx.com/javafx">
    <VBox alignment="CENTER" maxHeight="400" spacing="20">
        <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
            <Label fx:id="progress1" style="-fx-font-size: 24" text="Overall Progress"/>
            <JFXSpinner fx:id="progSpin" progress="0.0" styleClass="custom-spinner" HBox.hgrow="ALWAYS"/>
        </HBox>
        <JFXButton fx:id="process" alignment="CENTER" buttonType="RAISED" style="-fx-background-color: white"
                   text="PROCESS"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </VBox>
    <stylesheets>
        <URL value="@../css/jfoenix-fonts.css"/>
        <URL value="@../css/jfoenix-design.css"/>
        <URL value="@../css/styling.css"/>
    </stylesheets>
</StackPane>
